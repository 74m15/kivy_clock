<TickLabel@Label>:
    font_size: "20sp"
    bold: True
    text_size: self.size
    size_hint: None, None
    halign: "center"
    valign: "middle"
    pos_hint: {'center_x': .5, 'center_y': .9}
    
FloatLayout:
    size: 300, 300
    padding: "10pt"
    spacing: "5pt"
    
    canvas.before:
        Color:
            rgb: .6, .6, .6
        Rectangle:
            size: self.size
    
    TickLabel:
        text: "01"
        canvas.before:
            PushMatrix
            Rotate:
                angle: -30
                origin: root.center
        canvas.after:
            PopMatrix
    
    TickLabel:
        text: "02"
        canvas.before:
            PushMatrix
            Rotate:
                angle: -60
                origin: root.center
        canvas.after:
            PopMatrix
    
    TickLabel:
        text: "03"
        canvas.before:
            PushMatrix
            Rotate:
                angle: -90
                origin: root.center
        canvas.after:
            PopMatrix
    
