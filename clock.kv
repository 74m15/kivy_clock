        angle: 0
        size_hint: 1, 1
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.angle
                origin: root.center
            Color:
                rgb: 0, 0, 1
            Rectangle:
                size: 200, 4
                pos: root.center
        canvas.after:
            PopMatrix


