        canvas.after:
            PopMatrix
    
    Widget:
        id: hour
        angle: 0
        size_hint: 1, 1
        canvas.before:
            PushMatrix
            Rotate:
                angle: self.angle
                origin: root.center
            Color:
                rgb: 1, 0, 0
            Rectangle:
                size: 150, 8
                pos: root.center
        canvas.after:
            PopMatrix
    
